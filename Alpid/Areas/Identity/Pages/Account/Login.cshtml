@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<html>
<head>
    <link href="~/css/cssKanze/style.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="body"></div>
    <div class="grad"></div>
    <br>
    <div class="col-md-4" style="float:right;">
        <div class="header">
        </div>
        <section>
            <form id="account" method="post">
                <div class="header">
                    <div>ALPID<span>Sunchales</span></div>
                    <br>
                </div>

                <div class="form-group">
                    <label asp-for="Input.User" style="font-size:medium; color:black;"> Usuario</label>
                    <input asp-for="Input.User" class="form-control" />
                    <span asp-validation-for="Input.User" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="font-size:medium;color:black;">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger" style="font-size:medium"></div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" style="font-size:medium;color:black">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
                <br>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="font-size:medium; float:right;">Olvidaste tu contraseña?</a> <br />
                    </p>
                </div>
            </form>
        </section>
    </div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
