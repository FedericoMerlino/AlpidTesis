@model IEnumerable<Alpid.Models.Caja>

@{
    ViewData["Title"] = "Caja";
}
<html>
<body>
    <header>
        <link href="~/css/cssKanze/style.min.css" rel="stylesheet" />
    </header>
    <h1>Caja Alpid</h1>
    <div class="form-group">
        <p>
            <a asp-action="CreateIngreso" class="btn btn-primary">Ingresar Dinero</a>

            <a asp-action="CreateRetire" class="btn btn-danger">Reterirar Dinero</a>
        </p>
    </div>
    <!--Buscar por fechas-->
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Fecha desde<input type="datetime" name="fechaDesde" value="@ViewData["FechaDesdeFilter"]" />
                Fecha hasta<input type="datetime" name="fechaHasta" value="@ViewData["FechaHastaFilter"]" />
                <input type="submit" value="Buscar" class="btn btn-dark" />

            </p>
        </div>
    </form>
    <!--Busca solamente la info que se muestra en la grilla-->
    <div>
        <i class="fa fa-search fa-2x" style="Float: right; padding-left:10px; padding-top:2px;"></i>
        <input id="searchTerm" type="text" onkeyup="doSearch()" class="form-control" placeholder="Buscar" style=" width:200px; Float: right; " />
    </div>
    <!--tabla con la informacion de la caja-->
    <div>
        <form class="form-group">
            <table class="table table-responsive-sm" id="datos">
                <thead>
                    <tr>
                        <th>
                            Fecha Movimiento
                        </th>
                        <th>
                            Tipo Movimiento
                        </th>
                        <th>
                            Observaciones
                        </th>
                        <th>
                            Ingreso
                        </th>
                        <th>
                            Salida
                        </th>
                        <th>
                            Total
                        </th>
                        @*<th>
                                CuotaID)
                            </th>
                            <th>
                                Alquiler)
                            </th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaMovimiento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoMovimiento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Observaciones)
                            </td>
                            <td style="color:#49d292;">
                                @if (item.Debe != null)
                                {
                                    <label>$</label> @Html.DisplayFor(modelItem => item.Debe)
                                }
                            </td>
                            <td style="color:red;">
                                <!--if para que solamente traiga el signo de pregunta a los campos que tiene valores-->
                                @if (item.Haber != null)
                                {
                                    <label>$</label> @Html.DisplayFor(modelItem => item.Haber)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.CajaId">Ver</a>

                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.CuotaID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Alquiler.AlquilerID)
                                </td>*@
                            @*<td>
                                    <a asp-action="Edit" asp-route-id="@item.CajaId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.CajaId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.CajaId">Delete</a>
                                </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</body>
</html>
<script>



</script>