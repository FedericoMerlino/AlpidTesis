@model IEnumerable<Alpid.Models.Caja>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Debe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Haber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMovimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaMovimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CuotaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alquiler)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Debe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Haber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoMovimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaMovimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CuotaID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alquiler.AlquilerID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CajaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CajaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CajaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
