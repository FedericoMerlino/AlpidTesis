@model Alpid.Models.Alquiler

@{
    ViewData["Title"] = "Nuevo alquiler";
}
<html>
<body style="background-color:ghostwhite;">
    <h1 style="color:blue">Nuevo alquiler</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" name="formCrearProducto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-4">
                    <label asp-for="FechaDesde" class="control-label">Fecha desde</label>
                    <input asp-for="FechaDesde" id="FechaAlquiler" type="date" class="form-control" />
                    <span asp-validation-for="FechaDesde" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="FechaHasta" class="control-label">Fecha hasta</label>
                    <input asp-for="FechaHasta" id="FechaAlquiler" type="date" class="form-control" />
                    <span asp-validation-for="FechaHasta" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="SociosId" class="control-label">Socio</label>
                    <select asp-for="SociosId" class="form-control" asp-items="ViewBag.SociosId"></select>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Observacion" class="control-label">Observación</label>
                    <input asp-for="Observacion" class="form-control" />
                    <span asp-validation-for="Observacion" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group col-md-4">
                    <input type="submit" onclick="AddProducts();" value="Seleccionar elemento ortopédico" class="btn btn-primary" />
                </div>
            </form>
            <form asp-action="AddProduct" id="AddProductForm" style="display: none;">
                <div class="form-group col-md-12">
                    <h3 style="color:blue;">Seleccionar productos</h3>
                    <div class="form-group col-md-3">
                        <label asp-for="Observacion" class="control-label">Observación</label>
                        <input asp-for="Observacion" class="form-control" />
                        <span asp-validation-for="Observacion" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="Observacion" class="control-label">Observación</label>
                        <input asp-for="Observacion" class="form-control" />
                        <span asp-validation-for="Observacion" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="Observacion" class="control-label">Observación</label>
                        <input asp-for="Observacion" class="form-control" />
                        <span asp-validation-for="Observacion" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="Observacion" class="control-label" style="color:ghostwhite;"></label>
                        <input type="submit" value="Guardar" class="form-control btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/lightbox/js/lightbox.min.js"></script>

<script>
    function AddProducts() {
        var formulario = document.getElementById('AddProductForm');
        formulario.style.display = 'block';
    };
</script>

