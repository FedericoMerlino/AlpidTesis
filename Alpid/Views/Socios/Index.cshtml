@model Paginacion<Alpid.Models.Socios>
@{
    ViewData["Title"] = "Socios";
}

<html>
<body>
    <header>
        <link href="~/css/cssKanze/style.min.css" rel="stylesheet" />
    </header>
    <h1>Socios Alpid</h1>
    <p>
        <a asp-action="Create" class='btn btn-info'>Crear Socio</a>
    </p>
       Buscar: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
    <input type="submit" value="Buscar" class="btn btn-default" />
    <a asp-action="Index">Todos los registros </a> | Registros mostrados @Model.TotalR
    <div class="input-group-append" style="padding-top:30px">
        <div class="form-group">
            <h2 style="initial-letter:inherit; font-family: Homer Simpson, cursive; color:#0932ff;"> Grilla socios </h2>

            <h5 style="initial-letter:inherit; font-family: Homer Simpson, cursive; padding-right:10px">
                Estados:
                <label><input type="checkbox" id="cbox1" onclick="showContentActivos()"> Activos</label>
                <label style="padding-left:10px"><input type="checkbox" id="cbox2" onclick="showContentEliminados()"> Eliminados</label><br>
            </h5>
        </div>
       
    </div>
    <div>
        <i class="fa fa-search fa-2x" style="Float: right; padding-left:10px; padding-top:2px;"></i>
        <input id="searchTerm" type="text" onkeyup="doSearch()" class="form-control" placeholder="Buscar" style=" width:200px; Float: right; " />
    </div>
    <div>
        <form class="form-group">
            <table class="table table-responsive-sm" id="datos">
                <thead>
                    <tr>
                        <th>
                            CUIT
                        </th>
                        <th>
                            Razón Social
                        </th>
                        <th>
                            Domicilio
                        </th>
                        <th>
                            Teléfono
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Fecha Ingreso
                        </th>
                        <th>
                            Opciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="GrillaEliminados" style="background-color:salmon">
                            @if (item.FechaBaja != null)
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cuit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RazonSocial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Domicilio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaAlta)
                                </td>
                                <td>
                                    <a asp-action="Active" class='btn btn-primary' asp-route-id="@item.SociosID">Reactivar</a> |
                                    <a asp-action="Details" class='btn btn-info' asp-route-id="@item.SociosID">Ver</a>
                                </td>
                            }
                        </tr>
                        <tr id="GrillaActivos">
                            @if (item.FechaBaja is null)
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cuit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RazonSocial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Domicilio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaAlta)
                                </td>
                                <td>
                                    <a asp-action="Edit" class='btn btn-info' asp-route-id="@item.SociosID">Editar</a> |
                                    <a asp-action="Delete" class='btn btn-danger' asp-route-id="@item.SociosID">Borrar</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <div style="float:right; padding-bottom: 30px;">
                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                }
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @prevDisabled">
                    Anterior
                </a>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@i"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default">
                        @i
                    </a>
                }
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @nextDisabled">
                    Siguiente
                </a>
            </div>
        </form>
    </div>
</body>
</html>

<script>
    function showContentActivos() {

        elementActivos = document.getElementById("GrillaActivos");
        checkActivos = document.getElementById("cbox1");
        if (checkActivos.checked) {
            elementActivos.style.display = 'block';
        }
        else {
            elementActivos.style.display = 'none';
        }
    }
    function showContentEliminados() {
        elementEliminados = document.getElementById("GrillaEliminados");
        checkEliminados = document.getElementById("cbox2");
        if (checkEliminados.checked) {
            elementEliminados.style.display = 'block';
        }
        else {
            elementEliminados.style.display = 'none';
        }
    }
</script>
