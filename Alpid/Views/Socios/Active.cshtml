@model Alpid.Models.Socios

@{
    ViewData["Title"] = "Activar socio";
}
<html>
<body>
    <header>
        <link href="~/css/cssKanze/style.min.css" rel="stylesheet" />
    </header>
    <h4>Activar socio</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Active">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SociosID" />
                <div class="form-group">
                    <label asp-for="Cuit" class="control-label">Cuit</label>
                    <input asp-for="Cuit" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Cuit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RazonSocial" class="control-label">Razón social</label>
                    <input asp-for="RazonSocial" class="form-control" readonly="readonly" />
                    <span asp-validation-for="RazonSocial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Domicilio" class="control-label">Domicilio</label>
                    <input asp-for="Domicilio" class="form-control" />
                    <span asp-validation-for="Domicilio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none;">
                    <label asp-for="FechaBaja" class="control-label">Fecha eliminación</label>
                    <input asp-for="FechaBaja" type="date" class="form-control" value="null" readonly="readonly" />
                    <span asp-validation-for="FechaBaja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaAlta" class="control-label">Fecha ingreso</label>
                    <input asp-for="FechaAlta" type="date" class="form-control" id="fechaActual" readonly="readonly" />
                    <span asp-validation-for="FechaAlta" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none;">
                    <label asp-for="MotivoBaja" class="control-label">Motivo de eliminación</label>
                    <input asp-for="MotivoBaja" class="form-control" value="null" readonly="readonly" />
                    <span asp-validation-for="MotivoBaja" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <input type="submit" value="Activar" class="btn btn-primary" />
                    <a asp-action="Index" style="float:right;" class="btn btn-info">Regresar sin activar</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
