@model Alpid.Models.Proveedores

@{
    ViewData["Title"] = "Nuevo proveedor";
}
<html>
<body style="background-color:ghostwhite;">
    <h1 style="color:blue">Nuevo proveedor</h1>
    <h5 style="padding-top:20px; color:#d6ba2b;">Es obligatorio completar los campos que poseen *</h5>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cuit" class="control-label">Cuit*</label>
                    <input asp-for="Cuit" class="form-control" />
                    <span asp-validation-for="Cuit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RazonSocial" class="control-label">Razón Social*</label>
                    <input asp-for="RazonSocial" class="form-control" />
                    <span asp-validation-for="RazonSocial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Domicilio" class="control-label">Domicilio</label>
                    <input asp-for="Domicilio" class="form-control" />
                    <span asp-validation-for="Domicilio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label">Teléfono*</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mail" class="control-label">Mail</label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none;">
                    <label asp-for="FechaAlta" class="control-label">Fecha ingreso</label>
                    <input asp-for="FechaAlta" type="date" id="fechaActual" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FechaAlta" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" style="float:right;" class="btn btn-info">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<link rel="stylesheet" type="text/css" href="dist/sweetalert.css">
<script>
      var valor = "@ViewData["Message"]";
    //si funciona todo correcto
    if (valor == 1) {
        swal({
            title: "Felicidades!!",
            text: "La operación se realizo con éxito",
            icon: "success",
            button: "Aceptar",
        });
    } else {
        //si se produce algún error
        if (valor == 3) {
            swal({
                title: "Error!!",
                text: "Ya existe un Proveedor con el siguiente Cuit: '@ViewData["CuitError"]'",
                icon: "error",
                button: "Aceptar",
            });
        };
    };
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
