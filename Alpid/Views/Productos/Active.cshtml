@model Alpid.Models.Productos

@{
    ViewData["Title"] = "Editar producto";
}
<html>
<body>
    <header>
        <link href="~/css/cssKanze/style.min.css" rel="stylesheet" />
    </header>
    <h4>Editar producto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PoductosID" />
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductosTipo" class="control-label"></label>
                    <input asp-for="ProductosTipo" class="form-control" readonly="readonly" />
                    <span asp-validation-for="ProductosTipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaAlta" class="control-label"> Fecha ingreso</label>
                    <input asp-for="FechaAlta" type="date" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FechaAlta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioAlquiler" class="control-label">Precio a alquilar</label>
                    <input asp-for="PrecioAlquiler" class="form-control" />
                    <span asp-validation-for="PrecioAlquiler" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProveedoresID" class="control-label">Proveedor</label>
                    <input asp-for="ProveedoresID" class="form-control" readonly="readonly" />
                    <span asp-validation-for="ProveedoresID" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-link">Regresar a la grilla</a>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
