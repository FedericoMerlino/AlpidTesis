@model Alpid.Models.Productos

@{
    ViewData["Title"] = "Nuevo producto";
}

<html>
<body>
    <header>
        <link href="~/css/cssKanze/style.min.css" rel="stylesheet" />
    </header>
    <h1>Nuevo producto</h1>

    <div class="row">
        <div class="col-md-5">
            <h5 style="padding-top:20px; color:#d6ba2b;">Es obligatorio completar los campos que poseen *</h5>
            <div class="form-group">
                <label class="control-label">Seleccione el tipo de producto que desea ingresar</label><br />
                <input id="checkAlquiler" name="radio" style="padding-left:10px;" TYPE="radio" onclick="validarcheck()"> De Alquiler
                <input id="checkInmobiliario" name="radio" TYPE="radio" onclick="validarcheck()"> Inmobiliario
            </div>
            <form asp-action="Create" id="formInmobiliario" style="display:none">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label">Catidad</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="FechaAlta" class="control-label">Fecha ingreso</label>
                    <input asp-for="FechaAlta" type="date" id="fechaActual" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FechaAlta" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="ProductosTipo" class="control-label">Nombre</label>
                    <input asp-for="ProductosTipo" value="Inmobiliario" class="form-control" />
                    <span asp-validation-for="ProductosTipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear Producto" class="btn btn-primary" />
                </div>
            </form>
            <form asp-action="Create" id="formAlquiler" style="display:none">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label">Catidad</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="FechaAlta" class="control-label">Fecha ingreso</label>
                    <input asp-for="FechaAlta" type="date" id="fechaActual" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FechaAlta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioAlquiler" class="control-label"> Precio a alquilar</label>
                    <input asp-for="PrecioAlquiler" class="form-control" />
                    <span asp-validation-for="PrecioAlquiler" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProveedoresID" class="control-label">Proveedor</label>
                    <select asp-for="ProveedoresID" class="form-control" asp-items="ViewBag.ProveedoresID"></select>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="ProductosTipo" class="control-label">Nombre</label>
                    <input asp-for="ProductosTipo" value="DeAlquiler" class="form-control" />
                    <span asp-validation-for="ProductosTipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear Producto" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-info">Regresar a la grilla</a>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function validarcheck() {
        $('#checkInmobiliario').on('click', function () {
            if ($(this).is(':checked')) {
                document.getElementById('formInmobiliario').style.display = 'block';
                document.getElementById('formAlquiler').style.display = 'none';
            }
        });
        $('#checkAlquiler').on('click', function () {
            if ($(this).is(':checked')) {
                document.getElementById('formAlquiler').style.display = 'block';
                document.getElementById('formInmobiliario').style.display = 'none';
            }
        });
    }
</script>
