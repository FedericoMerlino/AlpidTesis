@model Alpid.Models.Productos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Productos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label">Catidad</label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCompra" class="control-label">Fecha compra</label>
                <input asp-for="FechaCompra" type="date" class="form-control" />
                <span asp-validation-for="FechaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioCompra" class="control-label">Precio Compra</label>
                <input asp-for="PrecioCompra" class="form-control" />
                <span asp-validation-for="PrecioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaAlta" class="control-label">Fecha ingreso</label>
                <input asp-for="FechaAlta" type="date" id="fechaActual" class="form-control" />
                <span asp-validation-for="FechaAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioAlquiler" class="control-label"> Precio a alquilar</label>
                <input asp-for="PrecioAlquiler" class="form-control" />
                <span asp-validation-for="PrecioAlquiler" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductosTipoID" class="control-label">Tipo Producto</label>
                <select asp-for="ProductosTipoID" class="form-control" asp-items="ViewBag.ProductosTipoID"></select>

            </div>
            <div class="form-group">
                <label asp-for="ProveedoresID" class="control-label"></label>
                <select asp-for="ProveedoresID" class ="form-control" asp-items="ViewBag.ProveedoresID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
