@model IEnumerable<Alpid.Models.Productos>

@{
    ViewData["Title"] = "Productos";
}
<html>
<body>
    <h1>Productos Alpid</h1>
    <p>
        <a asp-action="Create" class='btn btn-success'>Nuevo Producto</a>
    </p>
    <!--Busca en la base de datos-->
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Buscar: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Buscar" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-info">Cancelar búsqueda </a>
            </p>
        </div>
    </form>
    <!--boton para abrir modal Mobiliariosns-->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        Productos Mobiliarios
    </button>
    <!--diferentes funcionalidades dentro de la grilla-->
    <div class="input-group-append" style="padding-top:30px">
        <div class="form-group">
            <h2 style="initial-letter:inherit; font-family: Homer Simpson; color:#0932ff;"> Grilla Productos </h2>
            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <h5 style="initial-letter:inherit; font-family: Homer Simpson; padding-right:10px">
                        Estados:
                        <label style="padding-left:10px"><input type="radio" name="Coordinar" id="cbox1" onclick="validarcheck()" checked="checked"> Activos</label>
                        <label style="padding-left:10px"><input type="radio" name="Coordinar" id="cbox2" onclick="validarcheck()"> Eliminados</label>
                        <!--Se utiliza para pasar la info al controlador sobre que estado se desea buscar-->
                        <input type="text" id="FechasGrilla" name="filtroFecha" value="@ViewData["DateFilter"]" style="display:none;" />
                        <input type="submit" value="Buscar" class="btn btn-dark" />
                    </h5>

                </div>
            </form>
        </div>
    </div>
    <!--busca solamente en lo datos que se encunetran en la tabla con la funcion js que esta en el layaut-->
    <div>
        <i class="fa fa-search fa-2x" style="Float: right; padding-left:10px; padding-top:2px;"></i>
        <input id="searchTerm" type="text" onkeyup="doSearch()" class="form-control" placeholder="Buscar" style=" width:200px; Float: right; " />
    </div>
    <!--de alquiler-->
    <div>
        <form class="form-group">
            <table class="table table-responsive-sm" id="datos">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Tipo Producto
                        </th>
                        <th>
                            Precio de Alquiler
                        </th>
                        <th>
                            Proveedor
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.FechaBaja != null)
                        {
                            if (item.ProductosTipo == "DeAlquiler")
                            {
                                <tr id="GrillaEliminados" style="background-color:salmon;" name="Alquiler">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cantidad)
                                    </td>
                                    <td>
                                        De Alquiler
                                    </td>
                                    <td>
                                        $ @Html.DisplayFor(modelItem => item.PrecioAlquiler)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Proveedores.RazonSocial)
                                    </td>
                                    <td>
                                        <a asp-action="Active" class='btn btn-primary' asp-route-id="@item.PoductosID">Reactivar</a>|
                                        <a asp-action="Details" class='btn btn-info' asp-route-id="@item.PoductosID">Ver</a>
                                    </td>
                                </tr>
                            }
                        }
                        @if (item.FechaBaja is null)
                        {
                            if (item.ProductosTipo == "DeAlquiler")
                            {
                                <tr id="GrillaActivos" name="Alquiler">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cantidad)
                                    </td>
                                    <td>
                                        De Alquiler
                                    </td>
                                    <td>
                                        $ @Html.DisplayFor(modelItem => item.PrecioAlquiler)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Proveedores.RazonSocial)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" class='btn btn-info' asp-route-id="@item.PoductosID">Editar</a> |
                                        <a asp-action="Delete" class='btn btn-danger' asp-route-id="@item.PoductosID">Borrar</a>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </form>
    </div>
    <!--Mobiliarios-->
    <!-- The Modal-->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Productos Mobiliarios</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <form class="form-group">
                        <table class="table table-responsive-sm" id="datos">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        Cantidad
                                    </th>

                                    <th>
                                        Acciones
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.ProductosTipo == "Mobiliarios")
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cantidad)
                                            </td>

                                            <td>
                                                <a asp-action="Edit" class='btn btn-info' asp-route-id="@item.PoductosID">Editar</a> |
                                                <a asp-action="DeletePhysical" class='btn btn-danger' asp-route-id="@item.PoductosID">Borrar</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer" style="float:left;">
                <button type="button" class="btn btn-info" id="Close" data-dismiss="modal"> Cerrar </button>
            </div>
        </div>
    </div>

</body>
</html>

<script>
    //cambia el valor de los radiobutton de estados para luego pasarle la info que se requiere al controlador
    function validarcheck() {
        $('#cbox1').on('click', function () {
            if ($(this).is(':checked')) {
                document.getElementById('FechasGrilla').value = '';
            }
        });
        $('#cbox2').on('click', function () {
            if ($(this).is(':checked')) {
                document.getElementById('FechasGrilla').value = 'eliminados';
            }
        });
    }
</script>