@model Alpid.Models.CuotaPrecio

@{
    ViewData["Title"] = "Nuevo precio";
}
<html>
<body style="background-color:ghostwhite;">
    <h1 style="color:blue">Nuevo precio cuota</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Importe" class="control-label">Nuevo precio</label>
                    <input asp-for="Importe" class="form-control" />
                    <span asp-validation-for="Importe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaDesde" class="control-label">Fecha desde</label>
                    <input asp-for="FechaDesde" type="date" id="fechaActual" class="form-control" readonly="readonly"/>
                    <span asp-validation-for="FechaDesde" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-area="" asp-controller="Cuotas" style="float:right;" asp-action="Index" class="btn btn-info">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
